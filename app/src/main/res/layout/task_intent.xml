<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<AbsoluteLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/taskNameView"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:layout_x="1dp"
        android:layout_y="2dp"
        android:text="tasknum"
        android:textSize="26dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-1dp" />

    <ProgressBar
        android:id="@+id/taskProgress"
        android:layout_width="70dp"
        android:layout_height="65dp"
        android:layout_x="272dp"
        android:layout_y="187dp" />

    <TextView
        android:id="@+id/dataView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_x="1dp"
        android:layout_y="38dp"
        android:text="data"
        android:textSize="15dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="55dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="220dp"
        android:layout_height="216dp"
        android:layout_x="188dp"
        android:layout_y="132dp" />

    <Button
        android:id="@+id/solutionBtn"
        android:layout_width="123dp"
        android:layout_height="39dp"
        android:layout_x="-1dp"
        android:layout_y="289dp"
        android:background="?android:attr/selectableItemBackground"
        android:text="Решение"
        android:textColor="@color/black"
        android:textSize="13dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="315dp" />

    <TextView
        android:id="@+id/solutionView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_x="1dp"
        android:layout_y="330dp"
        android:text=""
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="355dp" />

    <TextView
        android:id="@+id/answerView"
        android:layout_width="185dp"
        android:layout_height="32dp"
        android:layout_x="2dp"
        android:layout_y="672dp"
        android:text=""
        android:textSize="14dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="696dp" />


</AbsoluteLayout>
</ScrollView>


